<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

<LinearLayout
    android:id="@+id/route_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.unirail.MainActivity">

    <RelativeLayout
        android:id="@+id/Rlayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="12dp"
        android:background="#BBE2FB">

        <TextView
            android:id="@+id/textmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="최근 경로 탐색 결과"
            android:textColor="#000000"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e9e9e9" />

    <TextView
        android:id="@+id/time_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:text="1. 소요시간"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/startStation_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:text="2. 출발역"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/startStation"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/startLineNum"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/startRailLinkListNum"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/middleStation_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:text="3. 환승역"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="28sp" />

    <ListView
        android:id="@+id/middleList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center" />
    <!--        android:divider="@color/selected_text_color"-->

    <TextView
        android:id="@+id/finalStation_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:text="4. 도착역"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/finalStation"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="24sp" />

    <Button
        android:id="@+id/navigate"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:gravity="center"
        android:text="안내 시작"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="24sp" />


</LinearLayout>
</ScrollView>